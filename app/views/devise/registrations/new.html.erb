<div class="main-container">
      <section class="no-pad login-page fullscreen-element">
      
        <div class="background-image-holder">
          <img class="background-image" alt="Poster Image For Mobiles" src="/assets/hero6.jpg">
        </div>
      
        <div class="container align-vertical">
          <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
              <h1 class="text-white">Login to continue</h1>
              <div class="photo-form-wrapper clearfix">
                
                  
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="field">
                    <%= f.email_field :email, placeholder: "Your Email", autofocus: true %>
                  </div>

                  <div class="field">
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
                  </div>

                  <div class="field">
                    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off" %>
                  </div>

                    <div class="actions">
                      <%= f.submit "Sign Up", class: "login-btn btn-filled" %>
                    </div>
                  <% end %>

                  
                
              </div>
              <%= render "devise/shared/links" %>
            </div>
          </div><!--end of row-->
        </div><!--end of container-->
      </section>
    </div>

