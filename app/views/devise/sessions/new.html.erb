<div class="main-container">
      <section class="no-pad login-page fullscreen-element">
      
        <div class="background-image-holder">
          <img class="background-image" alt="Poster Image For Mobiles" src="/assets/hero6.jpg">
        </div>
      
        <div class="container align-vertical">
          <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
              <h1 class="text-white">Login to continue</h1>
              <div class="photo-form-wrapper clearfix">
                
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="field">
                      <%= f.email_field :email, placeholder: "Email Address", autofocus: true, class: "form-email" %>
                    </div>

                    <div class="field">
                      <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-password" %>
                    </div>

                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me, class: "text-white" %>
                      </div>
                    <% end -%>

                    <div class="actions">
                      <%= f.submit "Log in", class: "login-btn btn-filled" %>
                    </div>
                  <% end %>

                  
                
              </div>
              <%= render "devise/shared/links" %>
            </div>
          </div><!--end of row-->
        </div><!--end of container-->
      </section>
    </div>
